<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key, height: 400, crop: :fill %>'); height: 400px">
  <div class="container">
    <h1 style="text-align: center"><%= @list.name %></h1>
  </div>
</div>

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "New Movie", new_list_bookmark_path(@list), class: "btn bg-dark text-light mt-4 justify-content-end" %>
  </div>

  <div class="d-flex justify-content-between gap-4 flex-wrap">
    <% @list.bookmarks.each do |bookmark|%>
      <div class="card-trip">
        <img src=<%= "https://image.tmdb.org/t/p/w500/#{bookmark.movie.poster_url}" %> alt="">

        <div class="card-trip-infos">
          <div>
            <h2> <%= bookmark.movie.title%> </h2> <span> <%= bookmark.movie.rating %> ⭐️</span>
            <p> <%= bookmark.movie.overview%> </p>
            <span> <%= bookmark.comment %> <%= link_to "Delete",
                bookmark,
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
              %> </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
